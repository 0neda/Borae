{% extends 'base.html.twig' %}
{% block title %}
    Lista de Eventos
{% endblock %}
{% block body %}
    <div x-data="{modalCriarEventoVisivel: false, modalEditarEventoVisivel: false, eventoEdicao: { }}">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
                <div>
                    <h1 class="text-3xl md:text-4xl font-bold text-zinc-100">
                        Eventos Disponíveis
                    </h1>
                    <p class="text-zinc-300 mt-1">
                        Descubra eventos incríveis ao seu redor
                    </p>
                </div>
                <div class="flex items-center gap-4">
                    <div class="flex items-center gap-2 bg-black/50 border-primary hover:cursor-default  rounded-xl px-4 py-2 shadow border transition-all duration-400 ease-in-out">
                        <span class="text-lg font-semibold text-primary">
                            {{ eventos|length }}
                        </span>
                        <span class="text-xs text-zinc-300">
                            eventos
                        </span>
                    </div>
                    {% if app.user and is_granted('ROLE_EMPRESA') %}
                        <button x-on:click="modalCriarEventoVisivel = true" class="btn btn-success btn-circle btn-xl shadow-lg hover:scale-105 transition-transform ease-in duration-500" aria-label="Criar Evento">
                            <i class="ph ph-calendar-plus text-2xl"></i>
                        </button>
                    {% endif %}
                </div>
            </div>
            {% if eventos is empty %}
                <div class="flex flex-col items-center justify-center py-20">
                    <div class="w-24 h-24 flex items-center justify-center rounded-full bg-gradient-to-br from-primary/20 to-secondary/20 mb-6">
                        <i class="ph ph-calendar-x text-5xl text-primary/60"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-zinc-200 mb-2">
                        Nenhum evento encontrado
                    </h3>
                    <p class="text-zinc-400 mb-6">
                        Seja o primeiro a criar um evento incrível!
                    </p>
                    <button x-on:click="modalCriarEventoVisivel = true" class="btn btn-primary flex items-center gap-2">
                        <i class="ph ph-plus"></i>
                        Criar Evento
                    </button>
                </div>
            {% else %}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6" x-data="{ eventoDetalhe: null }">
                    {% for evento in eventos %}
                        <div class="group relative rounded-2xl bg-black/25 bg-gradient-to-br from-20% to-40% from-white/10 to-black/10 border border-white/35 shadow-xl shadow-black/20 transition-all duration-300 overflow-hidden hover:cursor-default">
                            <div class="h-40 flex items-center justify-center bg-gradient-to-br from-primary/20 to-secondary/20">
                                <i class="ph ph-calendar-check text-8xl text-black/50"></i>
                                <span class="absolute top-3 right-3 px-3 py-1 rounded-md text-xs font-bold bg-gradient-to-br saturate-50 text-black from-red-900 via-amber-300 to-red-900 border border-amber-300/50">
                                    {{ evento.categoria.getCategoria() }}
                                </span>
                                <span class="absolute top-3 left-3 bg-black/60 text-white text-xs rounded px-2 py-1">
                                    {{ evento.dataInicio|date('d M') }}
                                </span>
                            </div>
                            <div class="p-5 flex flex-col gap-2">
                                <h3 class="font-semibold text-lg text-zinc-100 group-hover:text-primary transition-colors line-clamp-2">
                                    {{ evento.nome }}
                                </h3>
                                <div class="flex items-center gap-2 text-zinc-300 text-sm">
                                    <i class="ph ph-clock text-primary"></i>
                                    <span>
                                        {{ evento.horaInicio|date('H:i') }}
                                    </span>
                                    <i class="ph ph-map-pin text-primary ml-3"></i>
                                    <span class="truncate">
                                        {{ evento.endereco }}
                                    </span>
                                </div>
                                <div class="flex items-center gap-2 text-zinc-300 text-sm">
                                    <i class="ph ph-user text-primary"></i>
                                    <span>
                                        {{ evento.criador.nome }}
                                    </span>
                                </div>
                                {% if evento.descricao %}
                                    <p class="text-sm text-zinc-300 line-clamp-2">
                                        {{ evento.descricao }}
                                    </p>
                                {% endif %}
                                <div class="flex gap-2 mt-2">
                                    <button type="button" class="btn btn-outline hover:brightness-125 bg-white/5 btn-sm border-white/25 drop-shadow-lg drop-shadow-transparent hover:drop-shadow-white shadow-none text-white flex-1 transition-all duration-400 ease-in" x-on:click="eventoDetalhe = {
                                        nome: '{{ evento.nome|e('js') }}',
                                        categoria: '{{ evento.categoria.getCategoria()|e('js') }}',
                                        data: '{{ evento.dataInicio|date('d/m/Y') }}',
                                        hora: '{{ evento.horaInicio|date('H:i') }}',
                                        endereco: '{{ evento.endereco|e('js') }}',
                                        criador: '{{ evento.criador.nome|e('js') }}',
                                    descricao: {{ evento.descricao is not empty ? '" ' ~ evento.descricao|e(' js') ~ ' "' : 'null' }}
                                        }">
                                        <i class="ph ph-eye mr-1"></i>
                                        Ver
                                    </button>
                                    {% if app.user and evento.criador == app.user %}
                                        <button type="button" class="btn btn-outline hover:brightness-125 bg-warning/5 btn-sm border-warning/25 drop-shadow-lg drop-shadow-transparent hover:drop-shadow-warning shadow-none text-warning flex-1 transition-all duration-400 ease-in" x-on:click="modalEditarEventoVisivel = true; eventoEdicao = {
                                            id: {{ evento.id }},
                                            nome: '{{ evento.nome|e('js') }}',
                                            data_inicio: '{{ evento.dataInicio|date('Y-m-d') }}',
                                            hora_inicio: '{{ evento.horaInicio|date('H:i') }}',
                                            endereco: '{{ evento.endereco|e('js') }}',
                                            categoria: '{{ evento.categoria.value|e('js') }}',
                                        descricao: {{ evento.descricao is not empty ? '\" ' ~ evento.descricao|e(' js') ~ ' \"' : 'null' }}
                                            }">
                                            <i class="ph ph-pencil mr-1"></i>
                                            Editar
                                        </button>
                                        <form method="post" action="{{ path('borae_eventos_deletar', {'id': evento.id}) }}" class="inline" onsubmit="return confirm('Tem certeza que deseja excluir este evento?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evento.id) }}">
                                                <button type="submit" class="btn btn-outline hover:brightness-125 bg-error/5 btn-sm border-error/25 drop-shadow-lg drop-shadow-transparent hover:drop-shadow-error shadow-none text-error flex-1 transition-all duration-400 ease-in" title="Excluir">
                                                    <i class="ph ph-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        <!-- Modal Detalhes Evento -->
                        <div x-cloak x-show="eventoDetalhe" x-transition.opacity.duration.200ms class="fixed inset-0 z-40 flex items-center justify-center bg-black/60 backdrop-blur-sm">
                            <div x-show="eventoDetalhe" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="scale-95 opacity-0" x-transition:enter-end="scale-100 opacity-100" class="w-full max-w-md bg-zinc-900 rounded-2xl shadow-2xl border border-zinc-700 p-8 relative">
                                <button x-on:click="eventoDetalhe = null" aria-label="Fechar" class="absolute top-4 right-4 text-zinc-400 hover:text-error transition-colors">
                                    <i class="ph ph-x text-xl"></i>
                                </button>
                                <h3 class="text-2xl font-bold text-zinc-100 mb-2" x-text="eventoDetalhe?.nome"></h3>
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary border border-primary/20" x-text="eventoDetalhe?.categoria"></span>
                                    <span class="text-zinc-300" x-text="eventoDetalhe?.data"></span>
                                    <span class="text-zinc-300" x-text="eventoDetalhe?.hora"></span>
                                </div>
                                <div class="flex items-center gap-2 text-zinc-300 mb-2">
                                    <i class="ph ph-map-pin text-primary"></i>
                                    <span x-text="eventoDetalhe?.endereco"></span>
                                </div>
                                <div class="flex items-center gap-2 text-zinc-300 mb-2">
                                    <i class="ph ph-user text-primary"></i>
                                    <span x-text="eventoDetalhe?.criador"></span>
                                </div>
                                <template x-if="eventoDetalhe?.descricao">
                                    <p class="text-zinc-200 mt-4" x-text="eventoDetalhe?.descricao"></p>
                                </template>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
            <div x-cloak x-show="modalCriarEventoVisivel" x-transition.opacity.duration.200ms x-trap.inert.noscroll="modalCriarEventoVisivel" x-on:keydown.esc.window="modalCriarEventoVisivel = false" x-on:click.self="modalCriarEventoVisivel = false" class="fixed inset-0 z-30 flex items-center justify-center bg-black/60 backdrop-blur-sm">
                <div x-show="modalCriarEventoVisivel" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="scale-95 opacity-0" x-transition:enter-end="scale-100 opacity-100" class="w-full max-w-lg bg-zinc-900 rounded-2xl shadow-2xl border border-zinc-700 p-0 relative overflow-hidden">
                    <button x-on:click="modalCriarEventoVisivel = false" aria-label="Fechar" class="absolute top-4 right-4 text-zinc-400 hover:text-error transition-colors z-10">
                        <i class="ph ph-x text-xl"></i>
                    </button>
                    <div class="bg-gradient-to-r from-primary/10 to-secondary/10 px-8 py-6 border-b border-zinc-800">
                        <h3 class="text-2xl font-bold text-zinc-100">
                            Criar Evento
                        </h3>
                    </div>
                    <div class="px-8 py-6">
                        {% if form %}
                            {{ form_start(form, {
                                    attr: {
                                    class: 'space-y-5',
                                    'x-on:submit': 'setTimeout(() => modalCriarEventoVisivel = false, 100)'
                                    }
                                }) }}
                            <div class="grid grid-cols-1 gap-4">
                                <div>
                                    <label class="block text-sm font-semibold text-zinc-200 mb-1">
                                        Nome do Evento
                                        <span class="text-error">
                                            *
                                        </span>
                                    </label>
                                    {{ form_widget(form.nome, {attr: {class: 'input input-bordered w-full bg-zinc-900 border-zinc-700 focus:ring-2 focus:ring-primary/40 focus:border-primary/60 placeholder:text-zinc-400', placeholder: 'Ex: Show de Rock, Torneio...' }}
                                    ) }}
                                    {{ form_errors(form.nome) }}
                                </div>
                                <div class="grid grid-cols-2 gap-3">
                                    <div>
                                        <label class="block text-sm font-semibold text-zinc-200 mb-1">
                                            Data
                                        </label>
                                        {{ form_widget(form.data_inicio, {attr: {class: 'input input-bordered w-full bg-zinc-900 border-zinc-700 text-sm focus:ring-2 focus:ring-primary/40 focus:border-primary/60' }}
                                        ) }}
                                    </div>
                                    <div>
                                        <label class="block text-sm font-semibold text-zinc-200 mb-1">
                                            Hora
                                        </label>
                                        {{ form_widget(form.hora_inicio, {attr: {class: 'input input-bordered w-full bg-zinc-900 border-zinc-700 text-sm focus:ring-2 focus:ring-primary/40 focus:border-primary/60' }}
                                        ) }}
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-zinc-200 mb-1">
                                        Endereço
                                        <span class="text-error">
                                            *
                                        </span>
                                    </label>
                                    {{ form_widget(form.endereco, {attr: {class: 'input input-bordered w-full bg-zinc-900 border-zinc-700 focus:ring-2 focus:ring-primary/40 focus:border-primary/60 placeholder:text-zinc-400', placeholder: 'Local do evento...' }}
                                    ) }}
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-zinc-200 mb-1">
                                        Categoria
                                        <span class="text-error">
                                            *
                                        </span>
                                    </label>
                                    <div class="relative">
                                        {{ form_widget(form.categoria, {attr: {class: 'select select-bordered w-full bg-zinc-900 border-zinc-700 focus:ring-2 focus:ring-primary/40 focus:border-primary/60 appearance-none pr-10' }}
                                        ) }}
                                        <span class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 text-zinc-400">
                                            <i class="ph ph-caret-down"></i>
                                        </span>
                                    </div>
                                </div>
                                {% if form.descricao is defined %}
                                    <div>
                                        <label class="block text-sm font-semibold text-zinc-200 mb-1">
                                            Descrição
                                        </label>
                                        {{ form_widget(form.descricao, {attr: {class: 'textarea textarea-bordered w-full bg-zinc-900 border-zinc-700 h-20 focus:ring-2 focus:ring-primary/40 focus:border-primary/60 placeholder:text-zinc-400', placeholder: 'Descreva brevemente...' }}
                                        ) }}
                                    </div>
                                {% endif %}
                                {{ form_widget(form._token) }}
                            </div>
                            <div class="flex gap-3 pt-6">
                                <button type="button" x-on:click="modalCriarEventoVisivel = false" class="btn btn-ghost flex-1">
                                    Cancelar
                                </button>
                                <button type="submit" class="btn btn-primary flex-1">
                                    <i class="ph ph-calendar-plus mr-2"></i>
                                    Criar Evento
                                </button>
                            </div>
                            {{ form_end(form, { render_rest: false }) }}
                        {% else %}
                            <div class="text-center">
                                <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-warning/20 to-warning/10 rounded-full flex items-center justify-center">
                                    <i class="ph ph-sign-in text-2xl text-warning"></i>
                                </div>
                                <h4 class="text-lg font-semibold mb-2 text-zinc-200">
                                    Login Necessário
                                </h4>
                                <p class="text-zinc-400 mb-4">
                                    Você precisa estar logado para criar eventos
                                </p>
                                <a href="{{ path('borae_auth_entrar') }}" class="btn btn-primary w-full flex items-center justify-center gap-2">
                                    <i class="ph ph-sign-in mr-2"></i>
                                    Fazer Login
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div x-cloak x-show="modalEditarEventoVisivel" x-transition.opacity.duration.200ms x-trap.inert.noscroll="modalEditarEventoVisivel" x-on:keydown.esc.window="modalEditarEventoVisivel = false" x-on:click.self="modalEditarEventoVisivel = false" class="fixed inset-0 z-30 flex items-center justify-center bg-black/60 backdrop-blur-sm">
                <div x-show="modalEditarEventoVisivel" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="scale-95 opacity-0" x-transition:enter-end="scale-100 opacity-100" class="w-full max-w-lg bg-zinc-900 rounded-2xl shadow-2xl border border-zinc-700 p-0 relative overflow-hidden">
                    <button x-on:click="modalEditarEventoVisivel = false" aria-label="Fechar" class="absolute top-4 right-4 text-zinc-400 hover:text-error transition-colors z-10">
                        <i class="ph ph-x text-xl"></i>
                    </button>
                    <div class="bg-gradient-to-r from-warning/10 to-warning/5 px-8 py-6 border-b border-zinc-800">
                        <h3 class="text-2xl font-bold text-zinc-100">
                            Editar Evento
                        </h3>
                    </div>
                    <div class="px-8 py-6">
                        <form :action="`/eventos/editar/${eventoEdicao.id}`" method="post" class="space-y-5">
                            <div class="grid grid-cols-1 gap-4">
                                <div>
                                    <label class="block text-sm font-semibold text-zinc-200 mb-1">
                                        Nome do Evento
                                        <span class="text-error">
                                            *
                                        </span>
                                    </label>
                                    <input type="text" name="nome" x-model="eventoEdicao.nome" class="input input-bordered w-full ..." required />
                                </div>
                                <div class="grid grid-cols-2 gap-3">
                                    <div>
                                        <label class="block text-sm font-semibold text-zinc-200 mb-1">
                                            Data
                                        </label>
                                        <input type="date" name="data_inicio" x-model="eventoEdicao.data_inicio" class="input input-bordered w-full ..." required />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-semibold text-zinc-200 mb-1">
                                            Hora
                                        </label>
                                        <input type="time" name="hora_inicio" x-model="eventoEdicao.hora_inicio" class="input input-bordered w-full ..." required />
                                    </div>
                                </div>
                                <div class="flex gap-3 pt-6">
                                    <button type="button" x-on:click="modalEditarEventoVisivel = false" class="btn btn-ghost flex-1">
                                        Cancelar
                                    </button>
                                    <button type="submit" class="btn btn-warning flex-1">
                                        <i class="ph ph-pencil mr-2"></i>
                                        Salvar Alterações
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
        