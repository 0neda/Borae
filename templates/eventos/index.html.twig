{% extends 'base.html.twig' %}

{% block title %}
	Lista de Eventos
{% endblock %}

{% block body %}
	<div x-data="{modalCriarEventoVisivel: false}">
		<button x-on:click="modalCriarEventoVisivel = true"
			type="button"
			class="btn btn-circle btn-xl btn-success hover:border-2 border-2 border-border-success hover:border-success hover:bg-success/70 shadow-md shadow-black/25 hover:shadow-success transition-all duration-300 transform hover:scale-105 scale-100 ease-out text-3xl animate-bounce fixed bottom-8 right-8 z-50"
			aria-label="Criar Evento">
			<i class="ph-thin ph-calendar-plus"></i>
		</button>
		<div x-cloak
			x-show="modalCriarEventoVisivel"
			x-transition.opacity.duration.200ms
			x-trap.inert.noscroll="modalCriarEventoVisivel"
			x-on:keydown.esc.window="modalCriarEventoVisivel = false"
			x-on:click.self="modalCriarEventoVisivel = false"
			class="fixed inset-0 z-30 flex items-end justify-center bg-black/70 p-4 pb-8 backdrop-blur-[2px] sm:items-center lg:p-8"
			role="dialog"
			aria-modal="true"
			aria-labelledby="defaultModalTitle">
			<div x-show="modalCriarEventoVisivel"
				x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
				x-transition:enter-start="scale-0"
				x-transition:enter-end="scale-100"
				class="flex max-w-lg flex-col gap-4 overflow-hidden rounded-box text-white bg-gradient-to-br from-black/10 via-white/15
				to-black/10 border-white/25 border-1 shadow-md shadow-white/5">

				<div class="flex items-center justify-between border-b border-outline bg-surface-alt/60 p-4 dark:border-outline-dark dark:bg-surface-dark/20">
					<h3 id="defaultModalTitle"
						class="font-semibold tracking-wide text-on-surface-strong dark:text-on-surface-dark-strong">Special Offer</h3>
					<button x-on:click="modalCriarEventoVisivel = false" aria-label="close modal">
						<i class="ph ph-x-circle"></i>
					</button>
				</div>

				<div class="px-4 py-8">
					<p>As a token of appreciation, we have an exclusive offer just for you. Upgrade your account now to unlock premium features and enjoy a seamless experience.</p>
				</div>

				<div class="flex flex-col-reverse justify-between gap-2 border-t border-outline bg-surface-alt/60 p-4 dark:border-outline-dark dark:bg-surface-dark/20 sm:flex-row sm:items-center md:justify-end">
					<button x-on:click="modalCriarEventoVisivel = false"
						type="button"
						class="whitespace-nowrap rounded-radius px-4 py-2 text-center text-sm font-medium tracking-wide text-on-surface transition hover:opacity-75 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary active:opacity-100 active:outline-offset-0 dark:text-on-surface-dark dark:focus-visible:outline-primary-dark">Remind me later
					</button>
					<button x-on:click="modalCriarEventoVisivel = false"
						type="button"
						class="whitespace-nowrap rounded-radius border border-primary dark:border-primary-dark bg-primary px-4 py-2 text-center text-sm font-medium tracking-wide text-on-primary transition hover:opacity-75 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary active:opacity-100 active:outline-offset-0 dark:bg-primary-dark dark:text-on-primary-dark dark:focus-visible:outline-primary-dark">Upgrade Now
					</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
