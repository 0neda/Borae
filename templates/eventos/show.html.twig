{% extends 'base.html.twig' %}

{% block title %}
  Evento
{% endblock %}

{% block body %}
  <h1>Evento</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ evento.id }}</td>
      </tr>
      <tr>
        <th>Nome</th>
        <td>{{ evento.nome }}</td>
      </tr>
      <tr>
        <th>Data_inicio</th>
        <td>{{ evento.dataInicio ? evento.dataInicio|date('Y-m-d') : '' }}</td>
      </tr>
      <tr>
        <th>Hora_inicio</th>
        <td>{{ evento.horaInicio ? evento.horaInicio|date('H:i:s') : '' }}</td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('borae_eventos_lista') }}">back to list</a>

  <a href="{{ path('borae_eventos_editar', { id: evento.id }) }}">edit</a>

  {{ include('eventos/_delete_form.html.twig') }}
{% endblock %}
