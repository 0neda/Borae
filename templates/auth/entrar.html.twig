{% extends 'base.html.twig' %}
{% block title %}
    Entrar no Boraê
{% endblock %}
{% block body %}
    <section class="relative w-full py-20 flex grow items-center justify-center overflow-hidden">
        <div class="relative z-10 text-center px-6 max-w-md mx-auto w-full">
            <div class="mb-8 transform hover:scale-105 transition-transform duration-500">
                <h1 class="text-5xl md:text-6xl text-white mb-4 tracking-tight font-black">
                    <span class="bg-gradient-to-r from-purple-400 via-pink-400 to-violet-400 bg-clip-text text-transparent">
                        Bem-vindo de volta!
                    </span>
                </h1>
                <p class="text-lg md:text-xl text-purple-100 mb-8 max-w-2xl mx-auto leading-relaxed">
                    Faça login para acessar sua conta e participar dos melhores eventos.
                </p>
                <div class="flex justify-center">
                    <form method="post" class="w-full max-w-md space-y-6 bg-white/90 backdrop-blur-xl shadow-2xl border border-white/20 rounded-2xl p-8">
                        {% if app.user %}
                            <div class="alert alert-info flex items-center gap-3 mb-4">
                                <i class="ph ph-user-circle text-xl text-info"></i>
                                <span>
                                    Você já está conectado como
                                    <b>
                                        {{ app.user.nome }}
                                    </b>
                                </span>
                                <a class="btn btn-sm btn-error btn-outline ml-auto" href="{{ path('borae_sair') }}">
                                    <i class="ph ph-sign-out"></i>
                                    Sair
                                </a>
                            </div>
                        {% endif %}
                        <div class="form-control text-left">
                            <label for="username" class="label font-semibold text-base-content">
                                Usuário
                            </label>
                            <input type="text" value="{{ ultimo_usuario }}" name="_username" id="username" class="input input-bordered w-full" placeholder="Digite seu usuário" autocomplete="username" required autofocus />
                        </div>
                        <div class="form-control text-left">
                            <label for="password" class="label font-semibold text-base-content">
                                Senha
                            </label>
                            <input type="password" name="_password" id="password" class="input input-bordered w-full" placeholder="Digite sua senha" autocomplete="current-password" required />
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                        <button class="btn btn-primary w-full btn-lg font-semibold flex items-center gap-2" type="submit">
                            <i class="ph ph-sign-in text-2xl"></i>
                            Entrar
                        </button>
                        <div class="text-center pt-4 border-t border-base-300">
                            <span class="text-base-content/60">
                                Primeira vez aqui?
                            </span>
                            <br>
                                <a href="{{ path('borae_cadastro') }}" class="btn btn-outline btn-secondary btn-wide mt-2">
                                    <i class="ph ph-user-plus text-xl"></i>
                                    Criar conta grátis
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        {% endblock %}
        