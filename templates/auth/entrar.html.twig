{% extends 'base.html.twig' %}

{% block title %}
  Entrar no Boraê
{% endblock %}

{% block body %}
  <div class="flex grow w-full items-center justify-center">
    <div class="w-full max-w-md">

      <!-- Header com logo e título animado -->
      <div class="text-center mb-8 animate-fade-in-up">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-primary via-secondary to-accent rounded-3xl mb-6 shadow-2xl transform hover:scale-105 transition-transform duration-300">
          <i class="ph ph-calendar-heart text-3xl text-white animate-pulse"></i>
        </div>
        <h1 class="text-4xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent mb-3">
          Bem-vindo de volta!
        </h1>
        <p class="text-base-content/70 text-lg">Entre para continuar sua jornada no Boraê</p>
      </div>

      <form method="post" class="space-y-6">
        {% if app.user %}
          <div class="alert alert-info shadow-xl border border-info/20 bg-gradient-to-r from-info/10 to-info/20">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-info/20 rounded-full flex items-center justify-center">
                <i class="ph ph-user-circle text-xl text-info"></i>
              </div>
              <div class="flex-1">
                <div class="font-semibold text-info">Você já está conectado</div>
                <div class="text-sm opacity-80">Logado como {{ app.user.nome }} ({{ app.user.userIdentifier }})</div>
              </div>
              <a class="btn btn-sm btn-error btn-outline hover:btn-error hover:scale-105 transition-all" href="{{ path('borae_sair') }}">
                <i class="ph ph-sign-out"></i>
                Sair
              </a>
            </div>
          </div>
        {% endif %}

        <!-- Card do formulário com glassmorphism -->
        <div class="card bg-white/90 backdrop-blur-xl shadow-2xl border border-white/20 hover:shadow-3xl transition-all duration-300">
          <div class="card-body p-8">
            <div class="space-y-6">

              <!-- Campo Usuário -->
              <div class="form-control">
                <label class="label" for="username">
                  <span class="label-text font-semibold text-lg flex items-center gap-2">
                    <i class="ph ph-user text-primary text-xl"></i>
                    Usuário
                  </span>
                </label>
                <div class="relative group">
                  <input
                    type="text"
                    value="{{ ultimo_usuario }}"
                    name="_username"
                    id="username"
                    class="input input-bordered w-full pl-14 pr-4 py-4 text-lg focus:input-primary focus:shadow-lg focus:scale-[1.02] transition-all duration-200 bg-white/50 backdrop-blur-sm border-2"
                    placeholder="Digite seu usuário"
                    autocomplete="username"
                    required
                    autofocus
                  />
                  <div class="absolute left-4 top-1/2 -translate-y-1/2 w-6 h-6 bg-primary/10 rounded-full flex items-center justify-center group-focus-within:bg-primary/20 transition-colors">
                    <i class="ph ph-user text-primary"></i>
                  </div>
                  <div class="absolute inset-0 bg-gradient-to-r from-primary/0 via-primary/5 to-primary/0 opacity-0 group-focus-within:opacity-100 transition-opacity rounded-lg pointer-events-none"></div>
                </div>
              </div>

              <!-- Campo Senha -->
              <div class="form-control">
                <label class="label" for="password">
                  <span class="label-text font-semibold text-lg flex items-center gap-2">
                    <i class="ph ph-lock text-primary text-xl"></i>
                    Senha
                  </span>
                </label>
                <div class="relative group">
                  <input
                    type="password"
                    name="_password"
                    id="password"
                    class="input input-bordered w-full pl-14 pr-4 py-4 text-lg focus:input-primary focus:shadow-lg focus:scale-[1.02] transition-all duration-200 bg-white/50 backdrop-blur-sm border-2"
                    placeholder="Digite sua senha"
                    autocomplete="current-password"
                    required
                  />
                  <div class="absolute left-4 top-1/2 -translate-y-1/2 w-6 h-6 bg-primary/10 rounded-full flex items-center justify-center group-focus-within:bg-primary/20 transition-colors">
                    <i class="ph ph-lock text-primary"></i>
                  </div>
                  <div class="absolute inset-0 bg-gradient-to-r from-primary/0 via-primary/5 to-primary/0 opacity-0 group-focus-within:opacity-100 transition-opacity rounded-lg pointer-events-none"></div>
                </div>
              </div>

              <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}" />

              <!-- Botão de entrada premium -->
              <button class="btn btn-primary w-full btn-lg text-lg font-semibold group relative overflow-hidden shadow-xl hover:shadow-2xl transform hover:scale-[1.02] transition-all duration-300" type="submit">
                <span class="relative z-10 flex items-center gap-3">
                  <i class="ph ph-sign-in text-2xl group-hover:scale-110 transition-transform duration-300"></i>
                  Entrar no Boraê
                </span>
                <div class="absolute inset-0 bg-gradient-to-r from-primary via-secondary to-accent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
              </button>

              <!-- Links extras com design melhorado -->
              <div class="text-center pt-6 border-t border-gradient-to-r from-transparent via-base-300 to-transparent">
                <p class="text-base-content/60 mb-4 font-medium">Primeira vez aqui?</p>
                <a href="{{ path('borae_cadastro') }}" class="btn btn-outline btn-secondary btn-wide hover:btn-secondary hover:scale-105 transition-all duration-300 shadow-lg">
                  <i class="ph ph-user-plus text-xl"></i>
                  Criar conta grátis
                </a>
              </div>

            </div>
          </div>
        </div>

        <!-- Footer estilizado -->
        <div class="text-center text-sm text-base-content/50 font-medium">
          <p class="bg-gradient-to-r from-transparent via-base-content/10 to-transparent p-4 rounded-lg">
            © 2024 Boraê - Conectando pessoas através de eventos
          </p>
        </div>

      </form>
    </div>
  </div>

  <style>
    @keyframes fade-in-up {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in-up {
      animation: fade-in-up 0.6s ease-out;
    }
  </style>
{% endblock %}
